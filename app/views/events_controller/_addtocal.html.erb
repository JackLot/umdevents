<% if !current_user.calendar.events.find_by_id(@event.id).nil? %>

	<%= form_for current_user.calendar, html: { method: :addtocal} do |f| %>

		<%= f.hidden_field :event_id, :value => @event.id %>
		<%= f.hidden_field "addremove", :value => 1 %>
		<%= f.hidden_field "rd", :value => 2 %>
		<% if 1 == 0 %><%= f.submit "Remove from calendar", class: "btn addtocalbtn" %><% end %>
		<button type="submit" class="btn addtocalbtn"><i class="icon-minus"></i> Remove from calendar</button>

	<% end %>

<% else %>

	<%= form_for current_user.calendar, html: { method: :addtocal} do |f| %>

		<div><%= f.hidden_field :event_id, :value => @event.id %></div>
		<%= f.hidden_field "rd", :value => 2 %>
		<button type="submit" class="btn addtocalbtn"><i class="icon-plus"></i> Add to my calendar</button>
		<% if 1 == 0 %> <%= f.submit "Add to my Calendar", class: "btn addtocalbtn" %> <% end %>

	 <% end %>

<% end %>