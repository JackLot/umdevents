<div id="event_holder">
<div class="event_name_holder"><%= @event.name %></div>

<div id="event_date_time">
<ul>
	<li><table><tr><td><%= image_tag("small_calendar_icon_black.png") %></td><td valign="middle" style="padding-top: 3px"><%= @event.start_time.strftime('%A') %> <%= @event.start_time.strftime('%B') %> <%= @event.start_time.day %>, <%= @event.start_time.year %></td></tr></table></li>

	<li><table><tr><td><%= image_tag("small_clock_icon_black.png") %></td><td valign="middle" style="padding-top: 3px"><%= @event.start_time.strftime('%l') %>:<%= @event.start_time.strftime('%M') %><%= @event.start_time.strftime('%P') %> - <%= @event.end_time.strftime('%l')%>:<%= @event.end_time.strftime('%M')%><%= @event.end_time.strftime('%P') %></td></tr></table></li>
</ul>
</div>


<div class="event_description">
	<%= @event.description %>
</div>

<div class="event_location event_description">
	<table><tr><td><strong>Location: &nbsp;</strong></td>
		<td><%= @event.location %></td></tr></table>
</div>

</table>

</div>

<div class="event_action_sidebar">

	<div class="sidebar_subsection_holder">
		<div class="sidebar_header">
			<h4>Rate this event</h4>
		</div>

		<div class="btn-group">
		  <button class="btn"><i class="icon-thumbs-up"></i> Cool!</button>
		  <button class="btn"><i class="icon-thumbs-down"></i> Ehh...</button>
		</div>
	</div>

	<div class="sidebar_subsection_holder">

		<div class="sidebar_header">
			<h4>Actions</h4>
		</div>

		<% if !signed_in? %>
			<a class="btn disabled" rel="tooltip" data-placement="left" data-title="Please login to enable this feature!" style="margin-bottom: 10px;"><i class="icon-plus"></i> Add to my calendar</a>
		<% else %>
			<%= render 'addtocal' %>
			<% if 1 == 0 %><a class="btn" style="margin-bottom: 10px;" type="button"><i class="icon-plus"></i> Add to my calendar</a><% end %>
		<% end %>
		
		<button class="btn" type="button" style="margin-bottom: 10px"><i class="icon-eye-open"></i> Remind me</button>
		<a class="btn" type="button" rel="tooltip" data-placement="left" data-title="Export to ICal format"><i class="icon-arrow-down"></i> Export</a>

	</div>

	<div class="sidebar_subsection_holder">

		<div class="sidebar_header">
			<h4>Share this Event</h4>
		</div>

		<div class="fb-like" style="margin-bottom: 10px" data-send="true" data-layout="button_count" data-width="450" data-show-faces="true"></div>
		<a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
	<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

	</div>

</div>